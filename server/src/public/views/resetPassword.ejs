<!DOCTYPE html>
<html>
<head>
  <title>Reset Password</title>
  <style>
    /* Basic CSS styling for the form */
    body {
      font-family: Arial, sans-serif;
    }

    .container {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    h2 {
      text-align: center;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 5px;
    }

    input[type="password"],
    button {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 3px;
    }

    button {
      background-color: #4CAF50;
      color: #fff;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .message {
      text-align: center;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Reset Password</h2>
    <div class="form-group">
      <label for="password">New Password</label>
      <input type="password" id="password" placeholder="Enter your new password">
    </div>
    <div class="form-group">
      <label for="confirm-password">Confirm Password</label>
      <input type="password" id="confirm-password" placeholder="Confirm your new password">
    </div>
    <button onclick="resetPassword()">Reset Password</button>
    <p class="message" id="message"></p>
  </div>

  <script>
    async function resetPassword() {
      // Get the password and confirm password values
      const email = "<%= email %>"
      var passwordInput = document.getElementById('password');
      var confirmPasswordInput = document.getElementById('confirm-password');
      var password = passwordInput.value;
      var confirmPassword = confirmPasswordInput.value;
      console.log("TEST: ", email)
      // Check if passwords match
      if (password !== confirmPassword) return showMessage('Passwords do not match');

      // const response = await fetch();
      showMessage('Password reset successful');
    }

    function showMessage(message) {
      var messageElement = document.getElementById('message');
      messageElement.innerHTML = message;
    }
  </script>
</body>
</html>